<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="inherit_crm_case_form_view_leads" model="ir.ui.view">
			<field name="name">CRM - Leads Form Inherit</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_form_view_leads" />
			<field name="arch" type="xml">
				<xpath expr="//sheet/div[@class='oe_right oe_button_box']" position="after">
					<div class="oe_title" name="ID">
						<group>
							<field name="id" string="Nº de iniciativa: "/>
						</group>
					</div>
				</xpath>
			</field>
		</record>
		<record id="inherit_crm_case_form_view_oppor" model="ir.ui.view">
			<field name="name">Opportunities Inherit</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
			<field name="arch" type="xml">
				<xpath expr="//sheet/div[@class='oe_right oe_button_box']" position="after">
					<div class="oe_title" name="ID">
						<group>
							<field name="id" string="Nº de oportunidad: "/>
						</group>
					</div>
				</xpath>
			</field>
		</record>
		<record id="inherit_crm_case_kanban_view_leads" model="ir.ui.view">
			<field name="name">CRM - Leads Kanban Inherit</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_kanban_view_leads" />
			<field name="arch" type="xml">
				<xpath expr="//div[@class='oe_kanban_content']/div" position="before">
					<div>
						Nº: <field name="id"/>
					</div>
				</xpath>
				<xpath expr="//kanban" position="attributes">
					<attribute name="default_order">write_date desc</attribute>
				</xpath>
				<xpath expr="//div[@class='oe_kanban_bottom_right']" position="before">
					<div>
						<field name="categ_ids"/>
					</div>
				</xpath>
			</field>
		</record>
		<record id="inherit_crm_case_tree_view_leads" model="ir.ui.view">
			<field name="name">CRM - Leads Tree Inherit</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
			<field name="arch" type="xml">
				<xpath expr="//tree" position="replace">
					<tree string="Leads" fonts="bold:message_unread==True" colors="grey:probability == 100">
       		        	<field name="date_deadline" invisible="1"/>
  	                	<field name="create_date"/>
   		        		<field name="name"/>
   		        		<field name="partner_id"/>
       	    			<field name="contact_name"/>
           				<field name="country_id" invisible="1"/>
           				<field name="email_from"/>
         	  			<field name="phone"/>
         	  			<field name="title"/>
         	  			<field name="function"/>
         	  			<field name="stage_id" invisible="1"/>
           				<field name="user_id" invisible="1"/>
               			<field name="section_id" groups="base.group_multi_salesteams" invisible="1"/>
               			<field name="probability" invisible="1"/>
               			<field name="campaign_id" invisible="1"/>
               			<field name="referred" invisible="1"/>
               			<field name="medium_id" invisible="1"/>
               			<field name="message_unread" invisible="1"/>
           			</tree>
				</xpath>
			</field>
		</record>
    </data>
</openerp>
