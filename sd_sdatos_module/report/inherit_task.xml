<openerp>
	<data>
 	   	 <template id="inherit_project_report" inherit_id="sd_report_project.project_report_document">
	   	 	<xpath expr="//h4" position="after">
	   	 		<div t-if="t.phisical_part">
					<strong>Nº de parte físico: </strong>
					<span t-field="t.phisical_part" />
				</div>
				<div t-if="t.categ_ids">
					<strong>Servicio: </strong>
					<span t-foreach="t.categ_ids" t-as="c">
						<span t-field="c.name" />,
					</span>
				</div>
	   	 	</xpath>
	   	 	<xpath expr="//div[@class='row']/div[@class='text-center']" position="before">
				<t t-if="o.total_incidencias">
					<div class="text-center">
						<strong>
							<i>
								Incidencias Consumidas:
								<span t-field="o.total_incidencias" />
							</i>
						</strong>  
					</div>
					<div class="text-center">
						<strong>
							<i>
								Tipo A: <span t-field="o.total_TA" />,
								Tipo B: <span t-field="o.total_TB" />,
								Tipo C: <span t-field="o.total_TC" />
							</i>
						</strong>  
					</div>
				</t>
				<t t-if="o.total_desplaza">
					<div class="text-center">
						<strong>
							<i>
								Total teimpo de desplazamiento:
								<span t-field="o.total_desplaza" />
							</i>
						</strong>  
					</div>
				</t>
			</xpath>
	   	 </template> 
	
		<template id="inherit_task_report"	inherit_id="sd_report_project.sd_task_report_document">
			<xpath expr="//h3/span" position="replace">
				<t t-if="o.phisical_part">
					<span t-field="o.phisical_part"/>		
				</t>
				<t t-if="not o.phisical_part">
					<span t-esc="'%.5d' % o.id"/>
				</t>	
			</xpath>
			<xpath expr="//div[@t-if='o.categ_ids']" position="after">
				<div t-if="o.office">
					<strong>Instalación: </strong>
					<span t-field="o.office"/>
				</div>
			</xpath>
			<xpath expr="//table[1][@class='table table-condensed']" position="attributes">
				<attribute name="t-if">o.work_ids</attribute>
			</xpath>
			<xpath expr="//table[2][@class='table table-condensed']" position="attributes">
				<attribute name="t-if">o.material_ids</attribute>
			</xpath>
			<xpath expr="//div[@class='row mt32 col-xs-offset-9']" position="before">
				<div class="row mt64 col-xs-offset-0" style="font-size:10px">
					<p>
						Para cualquier incidencia envíe un correo a:
						<b>incidencias@sdatos.es</b>
					</p>
				</div>
			</xpath>
			<xpath expr="//t[@t-if='o.signature_image']" position="replace">
				<t t-if="o.signature_image">
					<h4>Customer Signature</h4>
					<span t-field="o.signature_image" t-field-options="{&quot;widget&quot;: &quot;image&quot;, &quot;class&quot;: &quot;img-rounded&quot;}" />
				</t>
				<div t-field="o.signature_client" style="font-size:10px"/>
			</xpath>
			<xpath expr="//div[@t-if='not o.description']" position="replace"/>
			<xpath expr="//t[@t-if='not o.work_ids']" position="replace"/>
			<xpath expr="//t[@t-if='not o.material_ids']" position="replace"/>
			<xpath expr="//div[@class='row mt32 col-xs-offset-9']/h4" position="replace"/>
			<xpath expr="//t[@t-if='not o.signature_image']" position="replace"/>
		</template> 
	</data>
</openerp>
