            <field name="model">purchase.config.settings</field>
            <field name="inherit_id" ref="purchase.view_purchase_configuration"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='module_purchase_double_validation']" position="before">
                    <div name="group_repercute_tax">
                        <field name="group_repercute_tax" class="oe_inline"/>
                        <label for="group_repercute_tax"/>
                    </div>
                    <div name="group_repercute_discount">
                        <field name="group_repercute_discount" class="oe_inline"/>
                        <label for="group_repercute_discount"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>