<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report.external_layout_header">
			<t t-name="report.external_layout_header">
				<div class="header">
					<div class="row">
						<div class="col-xs-4">
							<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
								style="max-height: 110px;" />
						</div>
						<div class="col-xs-4"> 
							<br/>
							<div t-field="company.partner_id.comercial" style="font-size:16px"/>
						</div>
						<div class="col-xs-4" style="font-size:11px">
							<div style="font-size:12px" t-field="company.partner_id.name"/>
							<div t-if="company.partner_id.vat">NIF: <span t-field="company.partner_id.vat"/></div>
							<div t-if="company.partner_id.street2 or company.partner_id.street">
								<span t-field="company.partner_id.street"/>
								<span t-if="company.partner_id.street2 and company.partner_id.street">, </span>
								<span t-field="company.partner_id.street2"/>
							</div>
							<div t-if="company.partner_id.zip or company.partner_id.city">
								<span t-field="company.partner_id.zip"/>
								<span t-if="company.partner_id.zip and company.partner_id.city">, </span>
								<span t-field="company.partner_id.city"/>
							</div>
							<div t-if="company.partner_id.state_id or company.partner_id.country_id">
								<span t-field="company.partner_id.state_id.name"/>
								<span t-if="company.partner_id.state_id and company.partner_id.country_id">, </span>
								<span t-field="company.partner_id.country_id.name"/>
							</div>
							<div t-if="company.partner_id.phone or company.partner_id.mobile">
								<span t-field="company.partner_id.phone"/>
								<span t-if="company.partner_id.phone and company.partner_id.mobile"> - </span>
								<span t-field="company.partner_id.mobile"/>
							</div>
							<div t-field="company.partner_id.email"/>
						</div>
					</div>
					<div class="row zero_min_height">
						<div class="col-xs-12">
							<div style="border-bottom: 1px solid black;" />
						</div>
					</div>
				</div>
			</t>
		</template>
	</data>
</openerp>