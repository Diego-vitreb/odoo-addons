<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report.external_layout_header">
			<t t-name="report.external_layout_header">
					<div class="header">
						<div class="row">
							<div class="col-xs-2">
								<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
									style="max-height: 100px;" />
							</div>
							<div class="col-xs-10">
								<br/>
								<div style="font-size:25px; font-family:entypoRegular;">HERRAJES HERGORE, S.L.L.</div>
								<div style="border-bottom: 1px solid black;" />
								<div style="font-size:11px">
									Exposición, Almacén y Oficina: <span t-esc="'%s ' % company.partner_id.street"/>
									<span t-esc="'%s ' % company.partner_id.zip" />El Rosario · Sta. Cruz de Tenerife · Islas Canarias · 
									<span t-esc="company.partner_id.country_id.name" />
								</div>
								<div style="font-size:11px">
									TEL.: <span t-field="company.partner_id.phone" /> ·
									FAX: <span t-field="company.partner_id.fax"/> ·
									E-MAIL: <span t-field="company.partner_id.email" /> ·
									<span t-field="company.partner_id.website"/>
								</div>
							</div>
						</div>
						<!-- <div class="row zero_min_height">
							<div class="col-xs-13">
								<br />
								<div style="border-bottom: 1px solid black;" />
							</div>
						</div> -->
					</div>
				</t>
		</template>
	</data>
</openerp>