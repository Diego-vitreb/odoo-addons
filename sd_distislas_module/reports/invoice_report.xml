<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="sd_inherit_report_invoice" inherit_id="account.report_invoice_document">

			<xpath expr="//div/div/div[@class='col-xs-5 col-xs-offset-7']"
				position="replace">
				<div class="col-xs-4 col-xs-offset-4" style="font-size:16px">
					<strong>
						<span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
						<span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
						<span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
						<span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
						<span t-if="o.type == 'out_refund'">Refund <span style="color:#8A0829">Abono</span></span>
						<span t-if="o.type == 'in_refund'">Supplier Refund</span>
						<span t-if="o.type == 'in_invoice'">Supplier Invoice</span>
						<span t-field="o.number" />
					</strong>
				</div>
				<div style="font-size:12px">
					<div class="col-xs-8">
						<strong>
							<br>
								<span t-if="o.date_invoice">
									Date invoice:
									<span t-field="o.date_invoice" />
								</span>
							</br>
							<br>
								<span t-if="o.origin">
									Origin:
									<span t-field="o.origin" />
								</span>
							</br>
							<br>
								<span t-if="o.partner_id.ref">
									Customer Code:
									<span t-field="o.partner_id.ref" />
								</span>
							</br>
							<br>
								<span t-if="o.reference">
									Reference:
									<span t-field="o.reference" />
								</span>
							</br>
							<br>
								<span t-if="o.name">
									Description:
									<span t-field="o.name" />
								</span>
							</br>
							<br>
								<p />
							</br>
							<br />
						</strong>
					</div>
					<div class="col-xs-pull-11">
						<strong>
							Customer data
							<br />
						</strong>
						<span t-if="o.partner_id.name">
							<span t-field="o.partner_id.name" />
							<br />
						</span>
						<span t-if="o.partner_id.comercial">
							<span t-field="o.partner_id.comercial" />
							<br />
						</span>
						<span t-if="o.partner_id.street">
							<span t-esc="'%s, ' % o.partner_id.street" />
							<span t-esc="'CP: %s, ' % o.partner_id.zip" />
							<span t-esc="'%s, ' % o.partner_id.city" />
							<span t-esc="'%s' % o.partner_id.country_id.name" />
							<br />
						</span>
						<span t-if="o.partner_id.vat">
							<span t-field="o.partner_id.vat" />
							<br/>
						</span>
						<span t-if="o.partner_id.phone">
							<span t-field="o.partner_id.phone" />
						</span>
						<span t-if="o.partner_id.phone and o.partner_id.mobile">
							-- 
						</span>
						<span t-if="o.partner_id.mobile">
							<span t-field="o.partner_id.mobile" />
						</span>
					</div>
				</div>
			</xpath>

			<xpath expr="//div/div[@class='row mt32 mb32']" position="replace" />

			<xpath expr="//div/h2" position="replace" />

			<xpath expr="//div/table[@class='table table-condensed']"
				position="attributes">
				<attribute name="style">font-size:11px</attribute>
			</xpath>

			<xpath expr="//div/div[@class='col-xs-4 pull-right']" position="attributes">
				<attribute name="style">font-size:11px</attribute>
			</xpath>

			<xpath expr="//div/div[@class='col-xs-6']" position="attributes">
				<attribute name="style">font-size:11px</attribute>
			</xpath>

			<xpath expr="//div/p[@t-if='o.comment']" position="attributes">
				<attribute name="style">font-size:11px</attribute>
			</xpath>

			<xpath expr="//div/p[@t-if='o.payment_term.note']" position="attributes">
				<attribute name="style">font-size:11px</attribute>
			</xpath>

			<xpath expr="//div/p[@t-if='o.fiscal_position.note']" position="attributes">
				<attribute name="style">font-size:11px</attribute>
			</xpath>
			<xpath expr="//div/p[@t-if='o.fiscal_position.note']" position="after">
				<div t-if="o.user_id" style="font-size:11px"> 
					Comercial: <span t-field="o.user_id.name"/>,
					<span t-if="o.user_id.partner_id.mobile">Tfno: <span t-field="o.user_id.partner_id.mobile"/></span>
				</div>
				<div class="mt16" t-if="o.partner_bank_id" style="font-size:11px">
					Bank: <span t-field="o.partner_bank_id.bank_name"/><br/>
					Account: <span t-field="o.partner_bank_id.acc_number"/>
				</div>
			</xpath>

		</template>
	</data>
</openerp>