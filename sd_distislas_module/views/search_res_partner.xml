<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="inherit_view_res_partner_filter" model="ir.ui.view">
            <field name="name">inherit.res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
    			<xpath expr="//field[@name='name']" position="attributes">
    				<attribute name="filter_domain">['|','|','|',('display_name','ilike',self),('ref','=',self),('email','ilike',self),('comercial','ilike',self)]</attribute>
    			</xpath>
    		</field>
    	</record>
    </data>
</openerp>