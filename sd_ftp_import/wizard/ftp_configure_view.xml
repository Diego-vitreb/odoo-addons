<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
    	<record id="view_sd_ftp_config_form" model="ir.ui.view">
			<field name="name">view.ftp_config.form</field>
			<field name="model">sd.ftp_config</field>
			<field name="arch" type="xml">
				<form string="Ftp configuration">
					<header>
						<button name="to_configured" type="object" attrs="{'invisible': [('state', '=', '1')]}" string="Verify" class="oe_highlight"  groups="base.group_user"/>
						<button name="to_draft" type="object" attrs="{'invisible': [('state', '=', '0')]}" string="Convert to draft" groups="base.group_user"/>
						<field name="state" widget="statusbar" statusbar_visible="Draft"/>
					</header>
					<sheet>
						<div class="oe_title">
                        	<h1>
                        		<label string="Description:"/>
								<field name="name" class="oe_inline" attrs="{'readonly': [('state', '=', '1')]}"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="server" attrs="{'readonly': [('state', '=', '1')]}"/>
								<field name="user" attrs="{'readonly': [('state', '=', '1')]}"/>
							</group>
							<group>
			                    <field name="supplier_id" attrs="{'readonly': [('state', '=', '1')]}"/>
			                    <field name="passw" password="True" attrs="{'invisible': [('state', '=', '1')]}"/>
			                    <label string="ContraseÃ±a" attrs="{'invisible': [('state', '=', '0')]}"/>
		                    </group>
	                    </group>
	                    <group>
	                    	<field name="dir" attrs="{'readonly': [('state', '=', '1')]}"/>
	                    </group>
                    </sheet>
                </form>
			</field>
		</record>
    
    	<record id="view_sd_ftp_config_tree" model="ir.ui.view">
			<field name="name">view.ftp_config.tree</field>
			<field name="model">sd.ftp_config</field>
			<field name="arch" type="xml">
				<tree string="Ftp configuration">
					<field name="name"/>
                    <field name="user"/>
                    <field name="server"/>
                    <field name="passw" invisible="True"/>
                    <field name="dir" invisible="True"/>
                    <field name="supplier_id"/>
                    <field name="state"/>
                </tree>
			</field>
		</record>
    
    	<record id="sd_config_ftp" model="ir.actions.act_window">
            <field name="name">FTP Configuration</field>
            <field name="view_type">form</field>
            <field name="res_model">sd.ftp_config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sd_ftp_config_tree"/>
        </record>
        
    	<menuitem action="sd_config_ftp" id="sd_ftp_config_menu" name="FTP Configuration" parent="base.menu_ir_property" sequence="40"/>
   
    </data>
</openerp>