<?xml version="1.0" encoding="UTF-8"?>
    <!-- Templates modified at the web start, before loading of a database. >
    < Remove the Manage database link, but keep the Powered by OpenERP-->

<openerp>
    <data>
        <template id="no_select_db" inherit_id="web.login" name="Login">
            <xpath expr="//t[@t-call='web.database_select']" position="replace">
            </xpath>
	    <xpath expr="//t[@class='form-group field-login']" position="replace">
		<div class="form-group field-login">
                        <label for="login" class="control-label">Usuario</label>
                        <input type="text" name="login" t-att-value="login" id="login" class="form-control" required="required" autofocus="autofocus"/>
                </div>
	    </xpath>	
        </template>
            
        <template id="login_layout_no_db" inherit_id="web.login_layout" name="Login Layout">
            <xpath expr="//t[@t-set='head']" position="replace">
                <link href="/sd_custom_login/static/src/css/login.css" rel="stylesheet"/>
                <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
            </xpath>
            <xpath expr="//div[@class='oe_single_form_logo']" position="replace">
                <img src="/sd_custom_login/static/src/img/logo.png"/>
            </xpath>
            <xpath expr="//div[@class='oe_single_form_footer']" position="before">
                <t t-set="disable_database_manager" t-value="1"/>
            </xpath>
        </template>
	
    </data>
</openerp>

