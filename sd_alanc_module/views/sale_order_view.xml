<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
     	<record id="sale.action_orders" model="ir.actions.act_window">
            <field name="context">{'search_default_warehouse_id': context.get('warehouse')}</field>
        </record>
        <record id="sale.action_quotations" model="ir.actions.act_window">
            <field name="context">{'search_default_warehouse_id': context.get('warehouse')}</field>
        </record>
        <record model="ir.ui.view" id="inherit_sale_margin_sale_order_line_form">
	        <field name="name">sd.sale.order.line.tree.margin.view.form</field>
	        <field name="model">sale.order</field>
	        <field name="priority" eval="15"/>
	        <field name="inherit_id" ref="sd_sale_margin.sale_margin_sale_order_line_form"/>
	        <field name="arch" type="xml">
	           <xpath expr="//field[@name='purchase_price']" position="replace">
	           		<field name="purchase_price" invisible="False" readonly="True" groups="base.group_user"/>
	            </xpath>
	        </field>
	    </record>
	    <record model="ir.ui.view" id="inherit_sale_margin_sale_order_line">
	        <field name="name">sd.sale.order.line.margin.view.form</field>
	        <field name="model">sale.order</field>
	        <field name="inherit_id" ref="sale.view_order_form"/>
	        <field name="arch" type="xml">
	            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="before">
	            	<field name="purchase_price" invisible="False" readonly="True" groups="base.group_user"/>
	            </xpath>
	        </field>
	    </record>
	    <record id="inherit_view_order_line_form2" model="ir.ui.view">
            <field name="name">sd.sale.order.line.form2</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_form2"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='price_unit']" position="before">
	            	<field name="purchase_price" invisible="False" readonly="True" groups="base.group_user"/>
	            </xpath>
            </field>
        </record>
    </data>
</openerp>