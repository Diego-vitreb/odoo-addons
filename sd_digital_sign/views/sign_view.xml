<?xml version="1.0" ?>
<openerp>
	<data>
        <record id="inherit_view_task_form2" model="ir.ui.view">
        	<field name="name">inherited.project.task.form</field>
        	<field name="model">project.task</field>
        	<field name="inherit_id" ref="project.view_task_form2"/>
        	<field name="arch" type="xml">
        		<xpath expr="//page[@string='Description']" position="inside">
        			<div class="col-xs-offset-9">
        				<group string="Signature"/>
        				<field name="signature_image" widget="signature"  style="width:400px"/>
        			</div>
        		</xpath>
        	</field>
        </record>
	</data>
</openerp>