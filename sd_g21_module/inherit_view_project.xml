<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="sd_view_project_kanban" model="ir.ui.view">
			<field name="name">sd.view.project.kanban</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.view_project_kanban" />
			<field name="arch" type="xml">
				<xpath expr="//kanban[@class='oe_background_grey']" position="attributes">
					<attribute name="default_order">name</attribute>
					<attribute name="default_group_by">parent_id</attribute>
				</xpath>
			</field>
		</record>
		<record id="inherit_view_project_task_form_materials_stock" model="ir.ui.view">
			<field name="name">sd.project.task.form.materials</field>
      		<field name="model">project.task</field>
			<field name="inherit_id" ref="project_task_materials_stock.view_project_task_form_materials_stock"/>
			<field name="arch" type="xml">
				<xpath expr="//button[@name='action_assign']" position="attributes">
					<attribute name="attrs">{'invisible':True}</attribute>
				</xpath>
				<xpath expr="//button[@name='action_done']" position="attributes">
					<attribute name="attrs">{'invisible':True}</attribute>
				</xpath>
				<xpath expr="//page[@string='Stock Moves']" position="replace"/>
			</field>
		</record>
		<record id="inherit_view_task_kanban" model="ir.ui.view">
			<field name="name">inherit.view.task.kanban</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_kanban" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='project_id']" position="after">
					<div attrs="{'invisible': [('partner_id','=',False)]}">Cliente: <field name="partner_id"/></div>
				</xpath>
			</field>
		</record>
	</data>
</openerp>