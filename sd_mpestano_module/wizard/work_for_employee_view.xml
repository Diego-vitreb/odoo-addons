<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	 <record id="view_work_for_employee_form" model="ir.ui.view">
			<field name="name">view.work.for.employee.form</field>
			<field name="model">work.for.employee</field>
			<field name="arch" type="xml">
				<form string="Work for Employee">
					<br>
						<h2 class="text-center">Filter by employee</h2>
					</br>
					<group col="4">
                      		<field name="date_type"/>
                   	</group>
                   			
                   	<group col="2" class="text-center">
                   		<field name="day_" attrs="{'invisible': [('date_type', '!=', 'day')], 'required': [('date_type', '=', 'day')]}"/>
                   		<field name="partner_id" widget="many2one"/>
                   	</group>
                    <footer>
                       	<button name="print_" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
    
    	<record id="action_employee_report" model="ir.actions.act_window">
            <field name="name">Print work for employee</field>
            <field name="view_type">form</field>
            <field name="res_model">work.for.employee</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="sd_mpestano_module.view_work_for_employee_form"/>
        </record>
        
    	<menuitem action="action_employee_report" id="menu_employee_report"
			name="Print work for employee" parent="project.menu_project_management" sequence="40"/>
    </data>
</openerp>