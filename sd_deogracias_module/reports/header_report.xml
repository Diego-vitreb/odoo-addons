<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report.external_layout_header">
			<t t-name="report.external_layout_header">
				<div class="header">
					<div class="row">
						<div class="col-xs-offset-4">
							<u><strong t-field="company.partner_id.comercial" style="font-size:20px; text-align:center"/></u>
						</div>
					</div>
					<div class="row mt16">
						<div class="col-xs-12">
							<span>Fiscal name: </span>
							<span t-field="company.name"/>
						</div>
						<div class="col-xs-12">
							<span>Address: </span>
							<span t-field="company.partner_id.street"/>,
							<span t-field="company.partner_id.zip"/>, 
							<span t-field="company.partner_id.city"/>-Fuerteventura, 
							<span t-field="company.partner_id.state_id.name"/>, 
							<span t-field="company.partner_id.country_id.name"/>
						</div>
						<div class="col-xs-12">
							<span>TIN: </span>
							<span t-field="company.vat"/>
						</div>
						<div class="col-xs-12">
							<span>Contact: </span>
							<span t-field="company.partner_id.phone"/> -
							<span t-field="company.partner_id.email"/>
						</div>
					</div>
					<div class="row zero_min_height mt8">
						<div class="col-xs-12">
							<div style="border-bottom: 1px solid black;" />
						</div>
					</div>
				</div>
			</t>
		</template>
		<record id="report.paperformat_euro" model="report.paperformat">
			<field name="header_spacing">40</field>
		</record>
	</data>
</openerp>