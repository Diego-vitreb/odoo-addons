<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="inherit_product_product_tree_view" model="ir.ui.view">
            <field name="name">sd.product.product.tree</field>
            <field name="model">product.product</field>
            <field eval="8" name="priority"/>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
				<xpath expr="//field[@name='attribute_value_ids']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='ean13']" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
				<xpath expr="//field[@name='ean13']" position="before">
					<field name="categ_id"/>
				</xpath>
            </field>
        </record>
        <record id="inherit_view_stock_product_tree" model="ir.ui.view">
            <field name="name">sd.product.stock.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_stock_product_tree"/>
            <field name="arch" type="xml">
            	<xpath expr="//tree" position="attributes">
            		<attribute name="colors" translation="off"></attribute>
            	</xpath>
            	<xpath expr="//field[@name='qty_available']" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//field[@name='virtual_available']" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            </field>
        </record>
        <menuitem name="Product" id="product.menu_product_template_action"/>	<!-- Para que no de error de no encontrar id al recargar el modulo -->        
        <delete id="product.menu_product_template_action" model="ir.ui.menu"/>
    </data>
</openerp>