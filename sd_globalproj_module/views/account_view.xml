<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
     	<record id="inherit_view_move_line_tree" model="ir.ui.view">
            <field name="name">sd.account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
            	<xpath expr="//tree/field[@name='account_id']" position="after">
            		<field name="product_default_code"/>
            	</xpath>
            	<xpath expr="//tree/field[@name='name']" position="attributes">
            		<attribute name="string">Concept</attribute>
            	</xpath>
            </field>
        </record>
        <record id="inherit_view_move_form" model="ir.ui.view">
            <field name="name">sd.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//tree/field[@name='account_id']" position="after">
            		<field name="product_default_code"/>
            	</xpath>
            	<xpath expr="//tree/field[@name='name']" position="before">
            		<field name="product_id" string="Service"/>
            	</xpath>
            	<xpath expr="//tree/field[@name='name']" position="attributes">
            		<attribute name="string">Concept</attribute>
            	</xpath>
            </field>
        </record>
         <record id="inherit_view_account_move_line_filter" model="ir.ui.view">
            <field name="name">Inherit Journal Items</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
            	<xpath expr="//search/field[@name='date']" position="after">
            		<field name="product_id"/>
            	</xpath>
            	<xpath expr="//search/group" position='inside'>
            		<filter string="Move" icon="terp-go-month" domain="[]" context="{'group_by':'move_id'}"/>
            	</xpath>
            </field>
        </record>
    </data>
</openerp>