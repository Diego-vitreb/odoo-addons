<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="inherit_view_quotation_tree" model="ir.ui.view">
    		<field name="name">inherit.sale.order.tree2</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_quotation_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<field name="client_order_ref"/>
				</xpath>
			</field>
    	</record>
    	<record id="inherit_view_order_tree" model="ir.ui.view">
    		<field name="name">inherit.sale.order.tree</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_tree" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<field name="client_order_ref"/>
				</xpath>
			</field>
    	</record>
    	<record id="sale.action_quotations" model="ir.actions.act_window">
            <field name="context">{'search_default_my_sale_orders_filter': 1, 'default_print_works':0}</field>
        </record>
        <record id="sale.act_res_partner_2_sale_order" model="ir.actions.act_window">
            <field name="context">{'search_default_partner_id': active_id, 'default_print_works':0}</field>
        </record>
        <record id="sale.action_view_sale_advance_payment_inv" model="ir.actions.act_window">
            <field name="context">{'default_print_works':0}</field>
        </record>
        <record id="sale_crm.action_crm_make_sale" model="ir.actions.act_window">
            <field name="context">{'default_print_works':0}</field>
        </record>
        
    </data>
</openerp>