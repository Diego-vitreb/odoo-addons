<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="sd_inherit_external_layout_footer" inherit_id="report.external_layout_footer">
			<xpath expr="//div[@class='footer']" position="attributes">
				<attribute name="style">font-size:8px</attribute>>			
			</xpath>
 			<xpath expr="//div/div/t" position="inside">
				<div class="pull-right">
					<t t-if="company.id == 1 or company.id == 4 or company.id == 5 or company.id == 7">
						<img class="img img-responsive" src="/sd_globalproj_module/static/src/img/a_registrado.png"
								style="width:50px;height:75px;display:inline" />
						<img class="img img-responsive" src="/sd_globalproj_module/static/src/img/a_ambiental.png"
								style="width:50px;height:75px;display:inline" />
					</t>
					<t t-if="company.id == 1 or company.id == 5">
						<img class="img img-responsive" src="/sd_globalproj_module/static/src/img/estrategia.png"
								style="width:50px;height:75px;display:inline" />
					</t>
					<t t-if="company.id == 1 or company.id == 4 or company.id == 5">
						<img class="img img-responsive" src="/sd_globalproj_module/static/src/img/excelencia.png"
								style="width:50px;height:75px;display:inline" />
					</t>
					<t t-if="company.id == 1">
						<img class="img img-responsive" src="/sd_globalproj_module/static/src/img/accesibilidad.png"
								style="width:50px;height:75px;display:inline" />
					</t>
				</div>
			</xpath>
			<xpath expr="//ul[@t-if='not company.custom_footer']/li[@t-if='company.phone']" position="attributes">
				<attribute name="style">width:100px</attribute>
			</xpath>
			
			<!-- <xpath expr="//ul[@t-if='not company.custom_footer']/li[@t-if='company.email'][2]" position="replace"/> -->
			
			<xpath expr="//ul[@t-if='not company.custom_footer']" position="inside">
				<li t-if="company.bank_ids">
					Cuenta bancaria: 
					<span t-foreach="company.bank_ids" t-as="c">
						<span t-field="c.bank_name" />
						<strong t-field="c.acc_number" />
						<span>&amp;bull;</span>
					</span>
				</li>
			</xpath>
 		</template>
	</data>
</openerp>
			