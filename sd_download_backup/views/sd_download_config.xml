<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_sd_config_dwn_back_form" model="ir.ui.view">
			<field name="name">sd.config.dwn.back.form</field>
			<field name="model">sd.config_dwn_backup</field>
			<field name="arch" type="xml">
				<form string="Backup configuration">
					<header>
						<field name="state" widget="statusbar" statusbar_visible="0,1" statusbar_colors='{"1":"green"}'/>
					</header>
					<sheet>
						<div class="oe_title">
                        	<h1>
                        		<label string="FTP configuration to download backup"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="name"/>
								<field name="local_dir"/>
							</group>
							<group>
								<field name="user"/>
			                    <field name="passwd" password="True"/>
		                    </group>
	                    </group>
	                    <group>
	                    	<button string="Initialize" name="initialize_action" type="object" class="oe_highlight"  groups="base.group_user" attrs="{'invisible': [('state', '=', '1')]}"/>
	                    </group>
                    </sheet>
                </form>
			</field>
		</record>
		
    	<record id="view_sd_config_dwn_back_tree" model="ir.ui.view">
			<field name="name">sd.config.dwn.back.tree</field>
			<field name="model">sd.config_dwn_backup</field>
			<field name="arch" type="xml">
				<tree string="Backup configuration" colors="blue:state=='0'">
					<field name="user"/>
					<field name="name"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
				
				
    	<record id="sd_config_dwn_back_action" model="ir.actions.act_window">
            <field name="name">Backup Configuration</field>
            <field name="view_type">form</field>
            <field name="res_model">sd.config_dwn_backup</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_sd_config_dwn_back_tree"/>
        </record>
    	
    	<menuitem action="sd_config_dwn_back_action" id="sd_dwn_back_config_menu" name="Backup FTP Configuration" parent="base.menu_ir_property" sequence="40"/>
    </data>
</openerp>