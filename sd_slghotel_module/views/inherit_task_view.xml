<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="sd_slg_task" model="ir.ui.view">
 			<field name="name">project.task.form.materials</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_form2" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='date_deadline']" position="before">
					<field name="id" string="Servicio Nº"/>				
				</xpath>
				<xpath expr="//field[@name='categ_ids']" position="attributes">
					<attribute name="string">Operarios</attribute>		
				</xpath>
	   	 	</field>  	
    	</record>
    	
    	<record id="sd_slg_task_internal" model="ir.ui.view">
 			<field name="name">project.task.form.internal</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project_task_materials.view_project_task_form_materials" />
			<field name="arch" type="xml">
				<xpath expr="//group[@string='Notas internas']" position="attributes">
					<attribute name="string">Personas de contacto</attribute>				
				</xpath>
	   	 	</field>  	
    	</record>
    	
    	<template id="inherit_sd_project_task_report_document" inherit_id="sd_print_project_work.sd_project_task_report_document">
			<xpath expr="//div/h2" position="before">
				<br/>
				<div class="raw mt16"/>
			</xpath>
			<xpath expr="//div/h2" position="replace">
				<h2 class="text-center">Parte de trabajo Nº: <span t-esc="'%.5d' % o.id"/></h2>
				<div class="col-xs-8 pull-right" style="font-size:14px">
					<br><strong>Dirección: </strong>
					<t t-if="o.partner_id.street">
						<span t-esc="'%s, ' % o.partner_id.street"/>
					</t>
					<t t-if="o.partner_id.city">
						<span t-esc="'%s' % o.partner_id.city"/>
					</t>
					</br>
					<t t-if="o.internal_description">
						<br><strong>Contacto:</strong>
						<span t-field="o.internal_description"/>
						</br>
					</t>
				</div>
			</xpath>
			
			<xpath expr="//div/div[@class='row mt128 mb8 col-xs-offset-10']" position="replace">
			    <strong>Observaciones</strong>
				<img src="/sd_print_project_work/static/src/img/trabajo.png" style="width:950px;height:100px" />
				<div class="pull-right">
					<h4>CLIENTE</h4>
					<t t-if="o.signature_image">
						<span t-field="o.signature_image"
							t-field-options="{&quot;widget&quot;: &quot;image&quot;, &quot;class&quot;: &quot;img-rounded&quot;}" />
					</t>
					<t t-if="not o.signature_image">
						<img src="/sd_print_project_work/static/src/img/trabajo.png"
							style="width:200px;height:100px" />
					</t>
				</div>
				<div class="col-xs-pull-3">
					<h4>SELIMGRAHOTEL</h4>
                    <img src="/sd_print_project_work/static/src/img/trabajo.png" style="width:200px;height:100px" />
				</div>
			</xpath>
			
			<xpath expr="//t[@t-if='o.categ_ids']" position="replace"/>
			
			<xpath expr="//p/strong" position="replace">
				<strong>Operarios: </strong>
			</xpath>
			
			<xpath expr="//p/span[@t-field='o.user_id']" position="replace">
				<t t-foreach="o.categ_ids" t-as="a">
					<t t-esc="'%s, ' % a.name" />
				</t>
			</xpath>
		</template>
    
    </data>
</openerp>